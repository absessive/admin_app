<%= provide(:title, 'Users') %>
<h1>Users Page</h1>

<div class="row">
	<div class="span6 offset1">
		<p>No.of users <%= @users.count %></p>
		<table id="usertable">
			<thead>
				<tr>
					<th>User Id</th>
					<th>Username</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Show</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.id %></td>
						<td><%= best_in_place user,	:username %></td>
						<td><%= best_in_place user,	:first %></td>
						<td><%= best_in_place user,	:last %></td>
						<td><%= best_in_place user,	:email %></td>
						<td><%= user.roles %></td>
						<td><%= button_to "Show", user, :class => "btn btn-info", :method => "get" %></td>
						<td><%= button_to "Edit", edit_user_path(user), :class => "btn btn-warning", :method => "get" %></td>
						<td><%= button_to "Delete", { :action => "destroy", :id => user.id }, :class => "btn btn-danger", :method => "delete" %></td>				
					</tr>	
				<% end %>
			</tbody>
			<tfoot>
				<tr>
					<th><input type="hidden"/></th>
					<th><input type="text" class="search_init" value="Username" /></th>
					<th><input type="text" class="search_init" value="First Name" /></th>
					<th><input type="text" class="search_init" value="Last Name" /></th>
					<th><input type="text" class="search_init" value="Email" /></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>					
				</tr>
			</tfoot>	
		</table>
	</div>
</div>

